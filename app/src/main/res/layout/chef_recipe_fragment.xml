<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:weightSum="1"
        android:orientation="vertical"
        android:background="@drawable/chef_recipe_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/chef_recipe_img"
            android:layout_weight="0.5"
            android:background="@drawable/chef3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>

        <RelativeLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="by.lorem"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/chef_recipe_main_text"
                android:text="재료 :\n김치, 밥, 숟가락"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:src="@drawable/chef_recipe_page_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView" />
            <TextView
                android:textSize="18sp"
                android:text="1/4"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_alignBottom="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView" />

            <ImageView
                android:src="@drawable/chef_recipe_reply_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignBottom="@+id/chef_recipe_reply_cnt"
                android:layout_toStartOf="@+id/chef_recipe_reply_cnt"
                android:id="@+id/imageView2" />
            <TextView
                android:id="@+id/chef_recipe_reply_cnt"
                android:textSize="18sp"
                android:text="1,111"
                android:layout_margin="5dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:src="@drawable/chef_recipe_like_icon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:paddingBottom="4dp"
                android:layout_alignBottom="@+id/chef_recipe_like_cnt"
                android:layout_toStartOf="@+id/chef_recipe_like_cnt"
                android:id="@+id/imageView3" />

            <TextView
                android:id="@+id/chef_recipe_like_cnt"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:text="30"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_toStartOf="@+id/imageView2" />

        </RelativeLayout>

    </LinearLayout>


</layout>